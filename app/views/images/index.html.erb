<div class="containner banner">
<h1 class="text-center">Welcome to Nice Messes</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 journey-form" data-controller="form">
      <h3>Plan a journey</h3>
        <%= simple_form_for @itinerary do |f| %>
          <%= f.input :start_address, placeholder: "From" ,
          input_html: {data: {form_target: "start", action:"keyup->form#end"}}
          %>
          <%= f.input :end_address, placeholder: "To", wrapper_html: { class: 'd-none', data: {form_target: "end"}}, input_html: {data: {action: "keyup->form#mode"}} %>
          <%= f.input :mode, collection: [["Voiture", 0], ["VÃ©lo", 1], ["Marche", 2]],  prompt: "Select your transportation method",  wrapper_html: { class: 'd-none', id:'list', data: {form_target: "mode"}}, input_html: {data: {action: "click->form#submit"}} %>
          <%= f.button :submit, class: "btn btn-outline-secondary disabled", id: "submitbtn", data: {form_target: "submit"} %>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
  <ul>
    <% @images.each do |i| %>
      <li><%= i %></li>
    <% end %>
  </ul>
</div>
